<h2><%= Comment.model_name.human %></h2>
<table>
  <% if commentable.comments.blank? %>
    <p>コメントがありません</p>
  <% else %>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <% if comment.user.name.blank? %>
          <td><%= comment.user.email %></td>
        <% end %>
        <td><%= comment.body %></td>
        <% if comment.user == current_user %>
          <td><%= link_to t('views.common.edit'), edit_polymorphic_path([commentable, comment]) %></td>
          <td><%= link_to t('views.common.destroy'), polymorphic_path([commentable, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>
