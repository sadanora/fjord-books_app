<h1><%= @title %></h2>

<table>
	<tbody>
		<% if @users.any? %>
			<% @users.each do |user| %>
				<tr>
					<th>
						<% if user.avatar.attached? %>
							<%= image_tag user.avatar.variant(resize_to_fill: [30, 30])%>
						<% end %>
					</th>
					<td>
						<%= user.name %>
						<%= link_to t('views.common.show'), user %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<%= paginate @users %>
